
<% include partials/header.ejs %>

<div class = "container">    

    <h1 class= "main-title home-title">Results for your search:</h1>
    
    <div class = "row">
        <% if(result["Search"] === undefined || result["Search"] === null){ %>
            <h1 class="error">I'm sorry, there's no result for this word! :(</h1>
                 
        <% }else{
                result["Search"].forEach(function(element){ %>
                <div class = "col-lg-4 col-sm-6 col-12">
                    <figure>
                        <img src=<%=element["Poster"]%> alt="<%=element["Title"]%>">
                        <figcaption><%=element["Title"]%> - <%= element["Year"] %></figcaption>
                    </figure>
                </div>
             
        
        <% })} %>
        
    </div>
    
    <a class="btn btn-secundary result-button" role = "button" href="/search">Try another keyword!</a>

</div>


